<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sudoku.sakura.controllers.PauseController"
      styleClass="root">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="⏸️ PAUSA" styleClass="title"/>

    <VBox prefHeight="50"/>

    <VBox alignment="CENTER" spacing="15" maxWidth="300">

        <Button text="REANUDAR" onAction="#handleResume"
                maxWidth="Infinity" styleClass="button"/>

        <Button text="REINICIAR" onAction="#handleRestart"
                maxWidth="Infinity" styleClass="button-secondary"/>

        <Button text="MENÚ PRINCIPAL" onAction="#handleMainMenu"
                maxWidth="Infinity" styleClass="button-secondary"/>

    </VBox>

</VBox>