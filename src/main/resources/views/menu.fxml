<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sudoku.sakura.controllers.MenuController"
      styleClass="root">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="SUDOKU SAKURA "
           style="-fx-font-size: 52px; -fx-font-weight: 700; -fx-text-fill: #DB7093; -fx-effect: dropshadow(gaussian, rgba(219, 112, 147, 0.3), 10, 0, 0, 4);"/>

    <VBox prefHeight="40"/>

    <VBox alignment="CENTER" spacing="15.0" maxWidth="320">

        <Button fx:id="newGameButton" text="NUEVA PARTIDA"
                onAction="#handleNewGame"
                maxWidth="Infinity"
                styleClass="button"/>

        <Button fx:id="continueButton" text="CONTINUAR"
                onAction="#handleContinue"
                maxWidth="Infinity"
                styleClass="button"/>

        <Button fx:id="statisticsButton" text="ESTADÍSTICAS"
                onAction="#handleStatistics"
                maxWidth="Infinity"
                styleClass="button"/>

        <Button fx:id="exitButton" text="SALIR"
                onAction="#handleExit"
                maxWidth="Infinity"
                styleClass="button-secondary"/>

    </VBox>

    <VBox prefHeight="30"/>

    <!-- Controles de audio -->
    <VBox alignment="CENTER" spacing="18" styleClass="panel" maxWidth="400">
        <padding>
            <Insets top="20" right="30" bottom="20" left="30"/>
        </padding>

        <!-- Control de Música -->
        <VBox spacing="10">
            <HBox alignment="CENTER" spacing="10">
                <Label text="🎵 Volumen Música:"
                       style="-fx-font-size: 15px; -fx-text-fill: #4A4A4A; -fx-font-weight: 600;"/>
                <Label fx:id="musicVolumeLabel" text="50%"
                       style="-fx-font-size: 15px; -fx-text-fill: #DB7093; -fx-font-weight: 700;"/>
            </HBox>
            <Slider fx:id="musicVolumeSlider"
                    min="0" max="100" value="50"
                    blockIncrement="10"
                    showTickMarks="false"
                    showTickLabels="false"
                    prefWidth="340"
                    styleClass="custom-slider"/>
        </VBox>

        <!-- Control de Efectos -->
        <VBox spacing="10">
            <HBox alignment="CENTER" spacing="10">
                <Label text="🔊 Volumen Efectos:"
                       style="-fx-font-size: 15px; -fx-text-fill: #4A4A4A; -fx-font-weight: 600;"/>
                <Label fx:id="soundVolumeLabel" text="50%"
                       style="-fx-font-size: 15px; -fx-text-fill: #DB7093; -fx-font-weight: 700;"/>
            </HBox>
            <Slider fx:id="soundVolumeSlider"
                    min="0" max="100" value="50"
                    blockIncrement="10"
                    showTickMarks="false"
                    showTickLabels="false"
                    prefWidth="340"
                    styleClass="custom-slider"/>
        </VBox>
    </VBox>

</VBox>